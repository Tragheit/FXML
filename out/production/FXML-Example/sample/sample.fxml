<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/@" xmlns:fx="http://javafx.com/fxml"
      fx:controller="sample.Controller">
    <!--
    <Label text="I love bacon" fx:id="firstLabel"></Label>
